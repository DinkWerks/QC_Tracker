<Resource>
    Label:
        size_hint_x:.1
    BoxLayout:
        Label:
            text: root.primary
        Label:
            text: root.trinomial
        Button:
            text: root.rc
            on_release: root.callmenu(1)
        Button:
            text: root.dc
            on_release: root.callmenu(2)
        Button:
            text: root.gc
            on_release: root.callmenu(3)
    Label:
        size_hint_x:.1


<ResourcesScreen>
    orientation: 'vertical'
    Label:
        size_hint_y: .15
        text: 'Top Bar'
    BoxLayout:
        orientation:'vertical'
        canvas.before:
            Color:
                rgba: [.17,.17,.17,1]
            Rectangle:
                size: self.size
                pos: self.pos
        BoxLayout:
            size_hint_y: .06
            Label:
                size_hint_x: .1
            Button:
                text: 'Primary #'
            Button:
                text: 'Trinomial #'
            Button:
                text: 'Database QC'
            Button:
                text: 'PDF QC'
            Button:
                text: 'GIS QC'
            Label:
                size_hint_x: .1
        ScrollView:
            GridLayout:
                id: rsrclist
                cols: 1
                size_hint_y: None
                height: self.minimum_height
                row_default_height: 20
