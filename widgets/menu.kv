<DBQC>
    size_hint_y: .3
    orientation: 'vertical'
    FloatLayout:
        size_hint: 1, .3
        Button:
            text: 'Complete'
            size_hint: .166, .8
            pos_hint: {'x':.01, 'y':0}
            on_release: root.complete()
        Button:
            text: 'Missing'
            size_hint: .166, .8
            pos_hint: {'x':.648, 'y':0}
        Button:
            text: 'Voided'
            size_hint: .166, .8
            pos_hint: {'x':.824, 'y':0}
    FloatLayout:
        Label:
            text: root.user
            size_hint: .166,.05
            pos_hint: {'x':.01, 'y':.66}
        Label:
            text: root.date
            size_hint: .166,.05
            pos_hint: {'x':.01, 'y':.33}


